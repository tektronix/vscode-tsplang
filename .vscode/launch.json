{
    "version": "0.2.0",
    // List of configurations. Add new configurations or edit existing ones.
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Pretty Parse",
            "input": "server/grammar/antlr4-sandbox.lua",
            "startRule": "chunk",
            "visualParseTree": true,
            "grammar": "server/grammar/Tsp.g4"
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Text Parse",
            "input": "server/grammar/antlr4-sandbox.lua",
            "startRule": "chunk",
            "visualParseTree": false,
            "grammar": "server/grammar/Tsp.g4",
            "printParseTree": true,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ],
            "preLaunchTask": "watch:client"
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6009,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/server/**/*.js"
            ],
            "preLaunchTask": "watch:server"
        }
    ]
}

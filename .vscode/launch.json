{
    "version": "0.2.0",
    // List of configurations. Add new configurations or edit existing ones.
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server/test.js",
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Run Parser",
            "input": "test/grammars/bit-of-everything.lua",
            "startRule": "chunk",
            "visualParseTree": true
        },
        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ],
            "preLaunchTask": "watch:client"
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6009,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/out/server/**/*.js"
            ],
            "preLaunchTask": "watch:server"
        }
    ]
}

{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://www.tek.com/keithley/tsplang.plugin.schema.json",
    "type": "object",
    "title": "Tsplang Plugin Settings",
    "description": "Configures the current directory as a TSPLang extension plugin.",
    "readOnly": true,
    "writeOnly": false,
    "required": [
        "name"
    ],
    "definitions": {
        "shebangName": {
            "$id": "#/definitions/shebangName",
            "type": "string",
            "readOnly": true,
            "writeOnly": false,
            "pattern": "^([^\\[\\];]*)$"
        },
        "pluginExtensionObject": {
            "$id": "#/definitions/pluginExtensionObject",
            "type": "object",
            "description": "Contains rules to conditionally extend the given plugin.",
            "readOnly": true,
            "writeOnly": false,
            "required": ["plugin"],
            "properties": {
                "plugin": {
                    "$ref": "#/definitions/shebangName",
                    "description": "The plugin to extend."
                },
                "include": {
                    "default": [],
                    "type": "array",
                    "description": "An array of symbols to include. Includes all symbols if left empty.",
                    "readOnly": true,
                    "writeOnly": false,
                    "items": {
                        "type": "string",
                        "readOnly": true,
                        "writeOnly": false,
                        "pattern": "^(.*)$"
                    }
                },
                "exclude": {
                    "default": [],
                    "type": "array",
                    "description": "An array of symbols to exclude. Excludes no symbols if left empty.",
                    "readOnly": true,
                    "writeOnly": false,
                    "items": {
                        "type": "string",
                        "readOnly": true,
                        "writeOnly": false,
                        "pattern": "^(.*)$"
                    }
                }
            }
        }
    },
    "properties": {
        "name": {
            "$ref": "#/definitions/shebangName",
            "description": "The name of this TSPLang plugin. Must not contain square-brackets, semicolons."
        },
        "aliases": {
            "$id": "#/properties/aliases",
            "default": [],
            "type": "array",
            "description": "Alternative names for this plugin.",
            "readOnly": true,
            "writeOnly": false,
            "items": {
                "$ref": "#/definitions/shebangName",
                "description": "An alternative name for this plugin. Must not contain square-brackets, semicolons."
            }
        },
        "license": {
            "$id": "#/properties/license",
            "type": "string",
            "description": "The license that applies to this plugin.",
            "readOnly": true,
            "writeOnly": false,
            "pattern": "^(.*)$"
        },
        "extends": {
            "$id": "#/properties/extends",
            "type": "array",
            "description": "One or more existing plugins that should be loaded with this plugin.",
            "readOnly": true,
            "writeOnly": false,
            "items": {
                "$id": "#/properties/extends/items",
                "description": "The name of the plugin to extend or an object",
                "readOnly": true,
                "writeOnly": false,
                "anyOf": [
                    { "$ref": "#/definitions/shebangName" },
                    { "$ref": "#/definitions/pluginExtensionObject" }
                ]
            }
        },
        "keywords": {
            "$id": "#/properties/keywords",
            "type": "array",
            "description": "An array of reserved words for this plugin.",
            "readOnly": true,
            "writeOnly": false,
            "items": {
                "$id": "#/properties/keywords/items",
                "type": "string",
                "description": "A valid Lua name.",
                "readOnly": true,
                "writeOnly": false,
                "pattern": "^([a-zA-Z_][a-zA-Z_0-9]*)$"
            }
        }
    }
}

{
    "name": "tsplang",
    "displayName": "TSPLang",
    "description": "Keithley Instruments TSPÂ® language extension for Visual Studio Code",
    "version": "0.4.0",
    "preview": true,
    "publisher": "Keithley",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/tektronixofficial/tsp-language-extension"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:tsp"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "tsp",
                "aliases": [
                    "TSP",
                    "tsp"
                ],
                "extensions": [
                    ".tsp",
                    ".tspa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tsp",
                "scopeName": "source.lua",
                "path": "./third_party/syntaxes/Lua.plist"
            }
        ]
    },
    "dependencies": {
        "vscode": "^1.1.21",
        "vscode-languageclient": "^4.4.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.69",
        "chai": "^4.1.2",
        "istanbul": "^0.4.5",
        "license-compatibility-checker": "^0.3.3",
        "mocha-typescript": "^1.1.17",
        "nyc": "^12.0.2",
        "source-map-support": "^0.5.9",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2"
    },
    "scripts": {
        "compile": "tsc -p ./tsconfig.json && cd server && npm run install-server && cd .. && tsc -p server/tsconfig.json",
        "compile:client": "tsc -p ./tsconfig.json",
        "compile:server": "cd server && npm run install-server && cd .. && tsc -p server/tsconfig.json",
        "lint": "node ./node_modules/tslint/bin/tslint --project .",
        "prepackage": "npm run compile && npm run lint && npm run test",
        "package": "vsce package",
        "postinstall": "cd server && npm install && cd .. && npm run update-vscode",
        "test": "npm run lint -s & mocha",
        "test:coverage": "nyc mocha",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "watch:client": "tsc -w -p ./tsconfig.json",
        "watch:server": "cd server && npm run install-server && cd .. && tsc -w -p server/tsconfig.json"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "include": [
            "server/src/**/*.ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/*.test.ts",
            "./coverage/**",
            "./out/**",
            "./client/**",
            "./src/extension.ts"
        ],
        "reporter": [
            "html",
            "text",
            "mocha"
        ],
        "all": true
    }
}

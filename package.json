{
    "name": "tsplang",
    "displayName": "TSPLang",
    "description": "Keithley Instruments TSPÂ® language extension for Visual Studio Code",
    "version": "0.5.0",
    "preview": true,
    "publisher": "Keithley",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/tektronix/vscode-tsplang"
    },
    "bugs": {
        "url": "https://github.com/tektronix/vscode-tsplang/issues"
    },
    "qna": "https://github.com/tektronix/vscode-tsplang/issues",
    "badges": [
        {
            "url": "https://travis-ci.com/tektronix/vscode-tsplang.svg?branch=master",
            "href": "https://travis-ci.com/tektronix/vscode-tsplang",
            "description": "Continuous Integration (Travis-CI)"
        },
        {
            "url": "https://codecov.io/gh/tektronix/vscode-tsplang/branch/master/graph/badge.svg",
            "href": "https://codecov.io/gh/tektronix/vscode-tsplang",
            "description": "Test Coverage (Codecov)"
        },
        {
            "url": "https://img.shields.io/lgtm/grade/javascript/g/tektronix/vscode-tsplang.svg?logo=lgtm&logoWidth=18",
            "href": "https://lgtm.com/projects/g/tektronix/vscode-tsplang/context:javascript",
            "description": "Code Quality: JavaScript (LGTM)"
        },
        {
            "url": "https://img.shields.io/lgtm/alerts/g/tektronix/vscode-tsplang.svg?logo=lgtm&logoWidth=18",
            "href": "https://lgtm.com/projects/g/tektronix/vscode-tsplang/alerts",
            "description": "Total Alerts (LGTM)"
        }
    ],
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:tsp"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "tsp",
                "aliases": [
                    "TSP",
                    "tsp"
                ],
                "extensions": [
                    ".tsp",
                    ".tspa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tsp",
                "scopeName": "source.lua",
                "path": "./third_party/syntaxes/Lua.plist"
            }
        ]
    },
    "dependencies": {
        "vscode": "^1.1.21",
        "vscode-languageclient": "^4.4.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.69",
        "chai": "^4.1.2",
        "istanbul": "^0.4.5",
        "license-compatibility-checker": "^0.3.3",
        "mocha-typescript": "^1.1.17",
        "nyc": "^12.0.2",
        "source-map-support": "^0.5.9",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2"
    },
    "scripts": {
        "compile": "tsc -p ./tsconfig.json && cd server && npm run install-server && cd .. && tsc -p server/tsconfig.json && tsc -p server/antlr4-tsplang/tsconfig.json",
        "compile:client": "tsc -p ./tsconfig.json",
        "compile:server": "cd server && npm run install-server && cd .. && tsc -p server/tsconfig.json",
        "compile:antlr4-tsplang": "tsc -p server/antlr4-tsplang/tsconfig.json",
        "lint": "node ./node_modules/tslint/bin/tslint --project .",
        "prepackage": "npm run compile && npm run lint && npm run test",
        "package": "vsce package",
        "postinstall": "cd server && npm install && cd .. && npm run update-vscode",
        "test": "npm run lint -s & mocha --opts server/mocha.opts",
        "test:coverage": "nyc mocha --opts server/mocha.opts",
        "test:mocha": "mocha --bail --full-trace --opts server/mocha.opts",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "watch:client": "tsc -w -p ./tsconfig.json",
        "watch:server": "cd server && npm run install-server && cd .. && tsc -w -p server/tsconfig.json",
        "watch:antlr4-tsplang": "tsc -w -p server/antlr4-tsplang/tsconfig.json"
    }
}
